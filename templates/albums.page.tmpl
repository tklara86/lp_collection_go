{{template "base" .}}

{{define "content"}}
    <h1 class="text--lg">This is {{ index .StringMap "title" }}</h1>
    <form method="post" action="/albums" id="search-albums">
        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
        <div class="form-control">
            <label class="form-label" for="inputName">Name</label>
            <input class="input-control" type="text" name="name" id="inputName" placeholder="Name">
        </div>

        <div class="form-control">
            <label class="form-label" for="inputEmail">Email</label>
            <input class="input-control" type="text" name="email" id="inputEmail" placeholder="Email">
        </div>

        <div class="form-control">
            <label class="form-label" for="textarea">Description</label>
            <textarea class="input-control" name="description" id="textarea" placeholder="Description" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-medium btn-primary">Submit</button>
    </form>
{{end}}

